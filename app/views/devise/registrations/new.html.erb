<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ユーザー登録
      </h1>
    </div>

    <%# <%= render 'shared/error_messages', model: @user %> %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム※必須</label>
      </div>
      <%= f.text_area  :nickname, class:"input-default", id:"nickname", placeholder:"Recoli太一", maxlength:"20", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス※必須</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"recoli@gmail.com" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード※必須</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)※必須</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">あなたが大切にしている言葉</label>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :precious_word, class:"input-name", id:"precious_word", placeholder:"あなたがいつも心掛けている事や、好きな諺、座右の銘などがあれば書いてみてください" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日※必須</label>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birth_date,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: (Time.now.year),
                      end_year: 1930,
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <div class='register-btn'>
      <%= f.submit "新規登録" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>




